<% provide(:title, '製品一覧 | ライフウェーブパッチ販売サイト') %>

<%= render 'shared/backpage' %>

<div class="container">
  <div class="row">
    <div class="all-item col-10 offset-1">
      <h3 class="all-item-head">製品一覧</h3>
      <div class="item-count row">
        <p><%= all_products_count %> 件 :</p>
        <div class="order-select dropdown">
          <button class="btn dropdown-toggle" type="button" id="item-order-select-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            並べ替え
          </button>
          <div class="dropdown-menu" aria-labelledby="item-order-select-button">
            <a class="dropdown-item" href="/products">おすすめ順</a>
            <a class="dropdown-item" href="/products/?option=cp">価格（安い順）</a>
            <a class="dropdown-item" href="/products/?option=hp">価格（高い順）</a>
          </div>
        </div>
      </div>
      <ul class="item-wrap d-flex flex-wrap mb-5 pb-3">
        <% @products.each do |product| %>
          <li class="item-box">
            <%= link_to product_path(product) do %>
              <%= image_tag product.product_image_url(:thumb) %> <br>
              <p class="item-name mt-3 mb-0"><strong><%= product.name%></strong></p>
              <p class="item-name-kana"><strong><%= product.name_kana %></strong></p>
            <% end %>
            <div class="item-bottom d-flex">
              <div class="item-price pt-2">
                <p>¥ <%= change_consumption_tax(product.price).to_s(:delimited) %> (税込)</p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @products %>
    </div>
  </div>
</div>
