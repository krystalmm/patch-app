<% provide(:title, 'パスワード再設定 | ライフウェーブパッチ販売サイト') %>

<div class="container">
  <div class="row">
    <div class="password-reset-edit col-lg-6 offset-lg-3 col-8 offset-2">
      <h3 class="password-reset-edit-head">パスワード再設定</h3>
      <%= render 'shared/error_messages' %>
      <%= form_with model: @user, url: password_reset_path(params[:id]), id: 'password-reset-edit-form', local: true do |f| %>
        <%= hidden_field_tag :email, @user.email %>
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: "form-control validate[required] validate[minSize[8]]", id: "password-reset-edit", placeholder: " 再設定したいパスワードを入力してください"  %>
          <small id="passwordHelpBlock" class="form-text text-muted">
            ※パスワードは半角英数字８文字以上で入力してください。
          </small>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="password-reset-check" value="">
            <label class="form-check-label" for="password-reset-check">パスワードを表示する</label>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>